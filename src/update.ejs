<%- include('temps/main.ejs') %>
<main class="img1">
      <section class="banner">
            <div class="container upper left">
                  <h1 class="spectext">Updater Frissitése</h1>
                  <h2 class="spectext">Jelenlegi verzió: <%= version %></h2>
                  <h2 class="spectext">A frissitések automatikusan letöltödnek és újraindításkor aktiválásra kerülnek.</h2>
                  <h2 class="spectext szunetfent">További információ lentebb</h2>
                  
                      <div id="messages" style="color:cyan"></div>
                  
                      <div class="w3-light-grey">
                        <div class="w3-blue" style="height:24px;width:0%" id="progressBar"></div>
                      </div>
                  
                    </div>
            </div>
      </section>
</main>
<div class="basebox">
  <h1>A frissitésekről:</h1>
  <h2>Miért ÉRI MEG frissíteni:</h2>
  <h3>- Bugok, hibák kijavítása</h3>
  <h3>- Több modpack</h3>
  <h3>- Szebb dizájn</h3>
  <h2 class="kisszunetfent warning">A MODPACKEK FRISSITÉSEINEK NINCS KÖZE A LAUNCHERHEZ VAGY ANNAK A FRISSITÉSEIHEZ</h2>
</div>
  <script>
      
      // Listen for messages
      const {ipcRenderer} = require('electron');
      ipcRenderer.on('message', function(event, text) {
        var container = document.getElementById('messages');
        var message = document.createElement('div');
        message.innerHTML = text;
        container.appendChild(message);
      })
  </script>