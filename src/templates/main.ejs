<!DOCTYPE html>
<html>
  <head>
    <meta charset="utf-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <title>Ampix Updater</title>
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <link rel="stylesheet" href="assets/css/style.css" />
  </head>
  <body>
    <div id="cursor" class="cursor hide"></div>
    
    <header>
      <nav class="titlebar">
      <div class="titlebar-left">
        <h3 class="titlebar-text">Ampix Updater v<%= version %> <% if (dev) { %>
         DEV MÓD
        <% } %></h3>
      </div>
      <div class="titlebar-nav">
        <a href="home.ejs" class="titlebar-nav-links" id="Kezdőlap">Kezdőlap</a>
        <a href="update.ejs" class="titlebar-nav-links" id="Információk">Információk</a>
        <a href="versions.ejs" class="titlebar-nav-links" id="Modpackek">Modpackek</a>
      </div>
      <div class="titlebar-right">
        <span class="titlebar-link" id="minimize">&minus;</span>
        <span class="titlebar-link" id="close-app">&#10006</span>
      </div>
    </nav>
    </header>
    <script>
      const cursor = document.getElementById("cursor");

      document.addEventListener("mousemove", (e) => {
        cursor.classList.remove("hide");
        cursor.setAttribute(
          "style",
          "top: " + (e.pageY - 20) + "px; left: " + (e.pageX - 20) + "px;"
        );
      });
      document.addEventListener("click", () => {
        cursor.classList.add("expand");

        setTimeout(() => {
          cursor.classList.remove("expand");
        }, 500);
      });
    </script>
    <script src="assets/scripts/window.js"></script>
  </body>
</html>