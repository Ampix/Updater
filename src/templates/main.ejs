<!DOCTYPE html>
<html>
  <head>
    <meta charset="utf-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <title>Ampix Updater</title>
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <link rel="stylesheet" href="assets/css/style.css" />
  </head>
  <body>
    <div id="cursor" class="cursor hide"></div>
    <header>
      <nav class="main-nav">
        <div class="nav-container">
          <h1 class="nav-text">Ampix Updater</h1>
          <h3 class="version-text">v<%= version %></h3>
          <div class="nav-menu">
            <a href="home.ejs">Kezdőlap</a>
            <a href="update.ejs">Frissités</a>
            <a href="versions.ejs">Modpackek</a>
          </div>
        </div>
      </nav>
    </header>
    <script>
      const cursor = document.getElementById("cursor");

      document.addEventListener("mousemove", (e) => {
        cursor.classList.remove("hide");
        cursor.setAttribute(
          "style",
          "top: " + (e.pageY - 20) + "px; left: " + (e.pageX - 20) + "px;"
        );
      });
      document.addEventListener("click", () => {
        cursor.classList.add("expand");

        setTimeout(() => {
          cursor.classList.remove("expand");
        }, 500);
      });
    </script>
  </body>
</html>
